    "version": "0.2.0",
    "configurations": [
        {
            "name": "RSpec - all",
            "type": "Ruby",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "program": "/usr/bin/rspec",
            "args": [
                "--require", "spec_helper",
                "--require", "rails_helper",
                "--format", "documentation"
                ]
        },
        {
            "name": "Debug Local File",
            "type": "Ruby",
            "request": "launch",
            "program": "${workspaceRoot}/lib/bowling.rb"
        }
    ]
}